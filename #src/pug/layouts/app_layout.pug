include ../includes/mixins
doctype html
html(lang="ru")
	head
		meta(charset="UTF-8")
		meta(http-equiv="X-UA-Compatible" content="IE=edge")
		meta(name="mobile-web-app-capable" content="yes")
		meta(name="apple-mobile-web-app-capable" content="yes")
		meta(name="viewport" content="width=device-width, initial-scale=1.0")
		meta(name="description" content="Краткое описание документа")
		meta(name="keywords" content="keywords-ключевые слова для поиска")
		block link 
			link(rel="icon" type="image/icon" href="@@webRoot/img/icons/icon-logo.ico")
			link(rel="stylesheet" type="text/css" href="@@webRoot/css/main.min.css")
		block style
		block script
			script(defer="defer" src="@@webRoot/js/app.min.js")
			script(defer="defer" src="@@webRoot/js/main.min.js")

		block title
		- var text
		title #{text}

	body
		//- include ../modules/preloader-logo
		include ../includes/mixins
		.wrapper#holder
			.page(data-page="index")
				block header 
				block page-content
					main._main-content
						.main-content#wrapper
							._content#content
								block main-content
					block menu-float
						nav._menu-float
							include ../chunks/menu-float
					block button
						._aside#scrollButton
							+iconfont('angle-down', '_button')
					block modal
						._form-modal
							include ../chunks/form-modal